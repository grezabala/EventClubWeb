@model ClubWebApp.Application.Dominio.DTOS.POSTCreadEventosDto

@{
    ViewData["Title"] = "REGISTRAR EVENTO";
    // Layout = null;
}

<div class="col-md-10">
    <div class="card">
        <div class="card-header text-center">
            <h5>REGISTRAR EVENTO</h5>
        </div>
        <div class="card-body">
            <form asp-action="Cread" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="form-group form-caja">
                            <input asp-for="Nombre" class="form-control" placeholder="Titulo" required />
                            <label>Titulo</label>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-group form-caja">
                            <input asp-for="IdCliente" class="form-control" placeholder="ID Cliente" required />
                            <label>ID Cliente</label>
                            <span asp-validation-for="IdCliente" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <div class="form-group form-caja">
                            <input asp-for="Descripcion" class="form-control" placeholder="Descripción" required />
                            <label>Descripción</label>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-12">
                        <div class="form-group form-caja">
                            <input asp-for="Ubicacion" class="form-control" placeholder="Ubicación del Salón" required />
                            <label style="font-family:18px;">Ubicación del Salón</label>
                            <span asp-validation-for="Ubicacion" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class=" form-group col-md-6">
                        <div class="form-group form-caja">
                            <input asp-for="Numero_Salon" class="form-control" placeholder="Número del Salón" required />
                            <label>Número del Salón</label>
                            <span asp-validation-for="Numero_Salon" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-group form-caja">
                            <input asp-for="Salon" class="form-control" placeholder="Salón" required />
                            <label>Salón</label>
                            <span asp-validation-for="Salon" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-5">
                        <div class="form-group form-caja">
                            <input asp-for="Fecha_Evento" class="form-control" placeholder="Fecha del Evento" required data="Fecha_Evento" />
                            <label>Fecha</label>
                            <span asp-validation-for="Fecha_Evento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group col-md-6">
                        <div class="form-group form-caja">
                            <input asp-for="Cantidad_Personas" class="form-control" placeholder="Cantidad de Personas" required />
                            <label>Cantidad de Personas</label>
                            <span asp-validation-for="Cantidad_Personas" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <div class="form-group form-caja">
                            <input asp-for="Codigo" class="form-control" placeholder="Código" required />
                            <label>Código</label>
                            <span asp-validation-for="Codigo" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <button type="submit" class="btn btn-sm btn-success">
                            <i class="fa fa-save"> </i> Guardar
                        </button>
                        <button type="button" class="btn btn-sm btn-primary" data-bs-dismiss="modal">
                            <i class="fa fa-ban"></i> Cancelar
                        </button>
                        <br />
                        <hr />
                        <a class="boton-enlace" href="@Url.Action("Index", "Eventos")">VER EVENTO DISTPONIBLE</a>
                    </div>
                </div>

            </form>
        </div>
        <hr />
        <br />
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}