<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Event</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Styles.css" asp-append-version="true" />
    @*  <link href="/assets-old/css/material-dashboard.min.css?v=2.1.2" rel="stylesheet" /> *@
    <link rel="stylesheet" href="~/ClubWebApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
    @* <link rel="stylesheet" href="https://unpkg.com/bootstrap@5.3.3/dist/css/bootstrap.min.css"> *@

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid ">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" style="color:rgba(0, 0, 0, .9) !important;">EVENT</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Eventos" asp-action="Index">PROXIMOS EVENTOS</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Eventos" asp-action="Cread">CREAR UNA RESERVACION</a>
                        </li>
                        @* <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Clientes" asp-action="Index">CLIENTES</a>
                        </li> *@
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">NUESTRA FILOSOFIA</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contact">CONTACTOS</a>
                        </li>
                        <li>
                            <a class="nav-link text-dark" asp-area="" asp-controller="LoginClub" asp-action="Login">LOGIN</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-bottom:-140px;">
        <style>
            a {
                text-decoration: none;
                margin: 3.3px;
            }

            .foooter-div {
                text-decoration: none;
                font-family: 'Times New Roman', Times, serif;
                font-size: 20px;
                color: aliceblue;
                list-style: none;
                display: inline-flex;
            }

            .footer-p a:hover {
                color: #fff !important;
                font-size: 24px;
                transition: all 0.3s ease-out;
                transform: scale(-3);
            }

        </style>
        <!-- Agregar Font Awesome para los iconos -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

        <a href="https://www.facebook.com" target="_blank" class="btn btn-outline-primary btn-social btn-facebook footer-icon">
            <i class="fab fa-facebook-f"></i> Facebook
        </a>

        <a href="https://www.twitter.com" target="_blank" class="btn btn-outline-info btn-social btn-twitter footer-icon">
            <i class="fab fa-twitter"></i> X
        </a>

        <a href="https://www.instagram.com" target="_blank" class="btn btn-outline-danger btn-social btn-instagram footer-icon ">
            <i class="fab fa-instagram"></i> Instagram
        </a>

        <a href="https://www.linkedin.com" target="_blank" class="btn btn-outline-primary btn-social btn-linkedin footer-icon">
            <i class="fab fa-linkedin"></i> LinkedIn
        </a>

        <a href="https://www.youtube.com" target="_blank" class="btn btn-outline-danger btn-social btn-youtube footer-icon">
            <i class="fab fa-youtube"></i> YouTube
        </a>

        <a href="https://www.tiktok.com" target="_blank" class="btn btn-outline-dark btn-social btn-tiktok footer-icon">
            <i class="fab fa-tiktok"></i> TikTok
        </a>

        <a href="https://wa.me/" target="_blank" class="btn btn-outline-success btn-social btn-whatsapp footer-icon">
            <i class="fab fa-whatsapp"></i> WhatsApp
        </a>

        <!-- Pinterest -->
        <a href="https://www.pinterest.com" target="_blank" class="btn btn-outline-danger btn-social btn-pinterest footer-icon">
            <i class="fab fa-pinterest"></i> Pinterest
        </a>
        <hr />
        <!-- Agregar Font Awesome para los iconos -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">

        <div class="container footer-contactos">
            <p class="footer-p">
                &copy; 2025 - EVENT -
                <a asp-area="" asp-controller="Home" asp-action="Contact" class="footer-contact-link">
                    <i class="fas fa-envelope"></i> Contactos
                </a>
            </p>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
